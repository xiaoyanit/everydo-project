         </table>
       </div>

    </div>

    <div metal:fill-slot="portlets_two_slot">
        <div metal:use-macro="context/@@macro_basecamp/macros/companylogo" />
        <div metal:use-macro="context/@@project_list/macros/projects" />
    </div>


